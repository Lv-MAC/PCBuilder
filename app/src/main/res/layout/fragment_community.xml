<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CommunityFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBottomOf="parent"
            app:layout_constraintBaseline_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:text="Community"
                android:layout_gravity="center"
                android:textColor="@color/white"></TextView>
        </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/black">

        <TextView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:text="Community Parts"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:padding="30dp"
            android:src="@drawable/community_parts_logo">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/black">

        <TextView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:text="Sales Feed (Coming Soon)"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:padding="30dp"
            android:src="@drawable/community_sales_logo">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/black">

        <TextView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="start"
            android:text="Community Builds"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25dp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:layout_width="175dp"
            android:layout_height="200dp"
            android:layout_gravity="end"
            android:padding="30dp"
            android:src="@drawable/community_builds_logo">
        </ImageView>
    </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>
</FrameLayout>