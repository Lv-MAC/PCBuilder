<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PartsFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBaseline_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            android:text="Auto Builds"
            android:layout_gravity="center"
            android:textColor="@color/white"></TextView>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/black"
                android:id="@+id/custom_gaming">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_gravity="end"
                    android:text="Gaming"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/settings_developed_by">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/black"
                android:id="@+id/custom_budget">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_gravity="end"
                    android:text="Budget"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/settings_developed_by">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@color/black"
                android:id="@+id/custom_workstation">

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="70dp"
                    android:layout_gravity="end"
                    android:text="Workstation"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:padding="10dp"
                    android:src="@drawable/settings_developed_by">
                </ImageView>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>
</LinearLayout>